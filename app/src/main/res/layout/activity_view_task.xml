<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/viewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Welcome to Tutlane"
        android:textColor="#86AD33"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/erge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бюджет:"
        android:textStyle="bold"
        android:textColor="#3D3A3A"
        android:layout_marginBottom="5dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/viewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Tutlane"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFF00"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/ergsdgsge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" рублей"
        android:textColor="#353333"
        android:layout_marginBottom="5dp"/>
</LinearLayout>
    <TextView
        android:id="@+id/erавge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер телефона:"
        android:textStyle="bold"
        android:textColor="#3D3A3A"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/viewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Tutlane"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#3AB54E"
        android:layout_marginBottom="15dp"/>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"

        card_view:cardCornerRadius="8dp">
    <TextView
        android:id="@+id/ViewFulldesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="email|web"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="For more details visit http://tutlane.com and send mail to support@tutlane.com" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"

        card_view:cardCornerRadius="8dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Click"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:padding="12dp"
        android:text="Откликнутся"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Chat1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:padding="12dp"
        android:text="Вступит в чат"
        android:clickable="false"
        />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:id="@+id/rv1"/>


</LinearLayout>